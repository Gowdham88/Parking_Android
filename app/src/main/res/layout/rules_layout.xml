<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/rules_border">

    <TextView
        android:id="@+id/title_rules"
        style="@style/NunitoBlackLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:text="Parking Rules"
        android:layout_marginTop="5dp"
        android:textColor="@color/booking_txtclr"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/circle1"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ellipseselcted"
        android:layout_below="@+id/title_rules"/>

    <TextView
        android:id="@+id/rule1"
        style="@style/NunitoBlackLight"
        android:textColor="@color/booking_txtclr"
        android:textSize="12dp"
        android:text="Time for street parking 7am - 9am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_below="@+id/title_rules"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/circle1"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/circle2"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ellipseselcted"
        android:layout_below="@+id/circle1"/>

    <TextView
        android:id="@+id/rule2"
        style="@style/NunitoBlackLight"
        android:textColor="@color/booking_txtclr"
        android:textSize="12dp"
        android:text="2h hours/open time 8am and close time 8pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_below="@+id/rule1"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/circle2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ellipseselcted"
        android:layout_below="@+id/circle2"/>

    <TextView
        android:id="@+id/rule3"
        style="@style/NunitoBlackLight"
        android:textColor="@color/booking_txtclr"
        android:textSize="12dp"
        android:text="$10 per hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_below="@+id/rule2"
        android:layout_marginTop="11dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/circle3"/>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="22dp"
        android:background="@color/border_color"
        android:layout_below="@+id/rule3"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/view">
<RelativeLayout
    android:id="@+id/view_lay"
    android:layout_width="137dp"
    android:layout_height="40dp"
    >
        <Button
            android:background="@color/white"
            android:id="@+id/view_txt"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NunitoBlackLight"
            android:textColor="@color/booking_txtclr"
            android:textSize="12dp"
            android:text="View Image"
      android:layout_centerInParent="true"
            />
</RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border_color"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/navi_lay"
            android:layout_width="137dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/view1"
            >
            <Button
                android:background="@color/white"
                android:textAllCaps="false"
                android:id="@+id/navi_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NunitoBlackLight"
                android:textColor="@color/booking_txtclr"
                android:textSize="12dp"
                android:text="Navigate"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>