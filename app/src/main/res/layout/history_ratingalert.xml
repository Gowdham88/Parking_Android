<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="46dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="160dp"
    android:background="@drawable/rating_boarder"
    android:layout_marginBottom="160dp">


    <TextView
        android:id="@+id/rate_txt"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate the space"
        android:layout_marginTop="17dp"
        android:textSize="12dp"
        android:textColor="@color/booking_txtclr"
        android:layout_centerHorizontal="true"
      />

    <RelativeLayout
        android:id="@+id/rating_lay"
        android:orientation="horizontal"
        android:layout_below="@+id/rate_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/security_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Ratings:"
            android:layout_marginTop="17dp"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/booking_txtclr"
            android:layout_centerVertical="true"
            />

        <!--<RatingBar-->
            <!--android:id="@+id/rtbHighscr"-->
            <!--style="@style/Widget.AppCompat.RatingBar.Small"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignBottom="@+id/security_txt"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:layout_toEndOf="@+id/security_txt"-->
            <!--android:isIndicator="true"-->
            <!--android:max="5"-->
            <!--android:numStars="5"-->
            <!--android:text="" />-->

        <RatingBar
            android:id="@+id/rtbHighscr"
            android:layout_width="235dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleX="0.5"
            android:scaleY="0.5" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rating_lay"
        android:background="@color/border_color"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view">

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ok_txt"
            android:layout_alignBottom="@+id/ok_txt"
            android:layout_marginStart="37dp"
            android:layout_toEndOf="@+id/view1"
            android:text="Cancel"
            android:textColor="@color/booking_txtclr"
            android:textSize="12dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="21dp"
            android:background="@color/border_color" />

        <TextView
            android:id="@+id/ok_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="41dp"
            android:layout_toStartOf="@+id/view1"
            android:text="Okay"
            android:textColor="@color/booking_txtclr"
            android:textSize="12dp" />
    </RelativeLayout>
</RelativeLayout>