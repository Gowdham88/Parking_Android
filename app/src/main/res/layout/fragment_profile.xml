<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/scrollviewlin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/square_shape"
         android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="12dp"
            android:background="@null"
            style="@style/Nunitosemibold"
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/booking_txtclr"
            android:text="@string/email"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_img"
            android:layout_marginTop="19dp"/>

        <TextView
            style="@style/NunitoBlackLight"
            android:id="@+id/tx_email"
            android:layout_marginTop="33dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt"
            android:textColor="@color/booking_txtclr"
            android:text="@string/email" />
        <!--  <android.support.design.widget.TextInputLayout
              android:id="@+id/et_email_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
  -->
        <TextView
            android:layout_below="@+id/tx_email"
            style="@style/NunitoBlackLight"
            android:background="@null"
            android:gravity="bottom"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/email_txtclr"
            android:drawableBottom="@color/booking_txtclr"
            android:textSize="12sp"
            android:textColor="@color/booking_txtclr"
            android:inputType="textEmailAddress"
            android:hint="@string/enter_your_email"
            android:imeOptions="actionNext"
            android:focusable="auto"/>
        <View
            android:layout_below="@+id/et_email"
            android:id="@+id/passlineemail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/booking_txtclr"/>
        <!--</android.support.design.widget.TextInputLayout>-->

          <TextView
              android:layout_below="@+id/passlineemail"
        android:textColor="@color/booking_txtclr"
        android:textSize="12dp"
        style="@style/NunitoBlackLight"
        android:id="@+id/tx_car_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:text="@string/car_category" />

        <LinearLayout
            android:id="@+id/carlay"
            android:layout_below="@+id/tx_car_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27.86dp"
                android:layout_height="53.16dp"
                android:id="@+id/car_icon"
                android:background="@drawable/smallcar_icon" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    style="@style/NunitoBlackLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_size"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="8dp"
                    android:text="small"
                    android:textColor="@color/booking_txtclr"
                    android:textSize="12dp" />

                <TextView
                    style="@style/NunitoBlackLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/car_dimension"
                    android:text="[3 to 4.5m]"
                    android:textColor="@color/booking_txtclr"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_below="@+id/carlay"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/booking_txtclr"/>
    </RelativeLayout>
    <!--</ScrollView>-->
</RelativeLayout>


