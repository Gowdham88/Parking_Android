<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="211dp"
    android:layout_height="75dp" android:background="@drawable/carousel_background">
    <ImageView
        android:layout_width="27.86dp"
        android:layout_height="53.16dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/car_icon"
        android:layout_marginEnd="13.1dp"
        android:src="@drawable/car2_icon"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_size"
        android:layout_toRightOf="@id/car_icon"
        android:layout_toEndOf="@id/car_icon"
        android:text="Small"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_dimension"
        android:textStyle="bold"
        android:layout_toRightOf="@id/car_icon"
        android:layout_toEndOf="@id/car_icon"
        android:layout_below="@id/car_size"
        android:text="[3 to 4.5m]"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_marginStart="10dp" />
    </RelativeLayout>