        <!--xmlns:tools="http://schemas.android.com/tools">-->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destination_title"
            android:text="Destination"
            style="@style/Nunitoregular"
            android:textSize="14sp"
            android:textColor="#404B69"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            />
             <android.support.v7.widget.CardView
                app:cardElevation="2dp"
                 android:layout_below="@id/destination_title"
                 android:id="@+id/search_layout"
                 android:layout_marginStart="15dp"
                 android:layout_marginEnd="15dp"
                 android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                 app:cardCornerRadius="30dp"
                android:background="@drawable/shape_search_view">
                 <RelativeLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@color/white"
                     >

                     <ImageView
                         android:id="@+id/search_button"
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_centerVertical="true"
                         android:layout_marginRight="15dp"
                         android:layout_marginLeft="15dp"
                         android:layout_alignParentStart="true"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/ic_search1"
                         />


            <!--<android.support.v7.widget.SearchView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="34dp"-->
                <!--android:layout_marginRight="40dp"-->
                <!--android:id="@+id/home_search_view"-->
                <!--android:layout_alignParentStart="true"-->
                <!--app:iconifiedByDefault="false"-->
                <!--app:searchIcon="@drawable/ic_search1"-->
                <!--android:imeOptions="actionSearch"-->
                <!--android:background="@null"-->
                <!--app:queryHint=""-->
                <!--android:inputType="textNoSuggestions"-->
                <!--android:clickable="true"-->
                <!--android:focusable="true"-->
                <!--android:visibility="visible"-->
                <!--/>-->
                     <AutoCompleteTextView
                         android:layout_marginStart="45dp"
                         android:layout_marginEnd="28dp"
                         android:id="@+id/autoCompleteTextView"
                         android:layout_width="270dp"
                         android:layout_height="33dp"
                         android:ems="10"
                         android:singleLine="true"
                         android:hint="Search your destination"
                         android:textSize="12dp"
                         android:background="@null"
                         android:text="" >

                         <requestFocus />
                     </AutoCompleteTextView>
                     <Button
                         android:id="@+id/filter_button"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:layout_marginRight="15dp"
                         android:layout_gravity="center_vertical"
                         android:layout_alignParentEnd="true"
                         android:layout_centerVertical="true"
                         android:background="@drawable/ic_fliter1"
                         />
                 </RelativeLayout>

    </android.support.v7.widget.CardView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame_layout"
                android:layout_below="@id/search_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/current_location_card"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <fragment
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="173dp" />

            </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/current_location_layout"
            android:layout_below="@id/current_location_card">
            <TextView
                style="@style/Nunitoregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nearest_places_title"
                android:textSize="14sp"
                android:textColor="#404B69"
                android:text="@string/nearest_parking_places_next_to_my_current_location"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="180dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:id="@+id/nearest_places_recycler"
                />
        </LinearLayout>
        <TextView
            style="@style/NunitoBlackLight"
            android:id="@+id/search_btn"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/button_style"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginBottom="22dp"
            android:layout_below="@id/current_location_layout"
            android:text="Search"
            />
                </RelativeLayout>
            </FrameLayout>
        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expandable_list_shape"
            android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_below="@id/search_layout"
            tools:targetApi="lollipop" />
    </RelativeLayout>

    <!--</ScrollView>-->
    </RelativeLayout>

