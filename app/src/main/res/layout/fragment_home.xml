<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destination_title"
            android:text="Destination"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/destination_title"
            android:id="@+id/search_layout"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_search_view">
            <android.support.v7.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_search_view"
                app:iconifiedByDefault="true"
                android:layout_toLeftOf="@id/filter_button"
                android:imeOptions="actionSearch"
                android:background="@android:color/white"
                android:text="Search"
                android:inputType="textNoSuggestions"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@id/filter_button"
                android:layout_marginStart="5dp" />
            <Button
                android:id="@+id/filter_button"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_black"
                android:padding="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                />
            </RelativeLayout>
        </RelativeLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/current_location_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/search_layout"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:id="@+id/current_location_view"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                />
            </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/current_location_layout"
            android:layout_below="@id/current_location_card">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nearest_places_title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/nearest_parking_places_next_to_my_current_location"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/nearest_places_recycler"
                android:layout_below="@id/nearest_places_title"
                />
        </LinearLayout>
        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/current_location_layout"
            android:text="Search"
            />
   <!-- <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filter_fragment"
        android:layout_below="@+id/search_layout"
        />-->
    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/expandable_list_shape"
        android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:layout_below="@id/search_layout"
        tools:targetApi="lollipop" />
