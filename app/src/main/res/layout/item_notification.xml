<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="27dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingEnd="27dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification_message"
        android:text="Hey buddy, something happened to your car"
        android:textColor="#404B69"
        android:textSize="12sp"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/request_video"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_time"
        android:text="5 hours ago"
        android:textColor="#97A5CC"
        android:textSize="12sp"
        android:layout_below="@id/notification_message"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_video"
        android:textColor="#00B9AB"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:text="Request Video"
        android:layout_below="@id/notification_message"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/notification_time"
        android:background="#EAEAEA"
        android:layout_marginTop="4dp"
        />
</RelativeLayout>